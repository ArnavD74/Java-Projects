<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="photos24.RenameAlbumController" alignment="CENTER" spacing="10" style="-fx-padding: 20;" prefWidth="415">
    <Label text="Current Album Name"/>
    <TextField fx:id="currentAlbumNameField" promptText="Enter current album name"/>

    <Label text="New Album Name"/>
    <TextField fx:id="newAlbumNameField" promptText="Enter new album name"/>

    <Button text="Rename Album" onAction="#handleRenameAlbum"/>
</VBox>
