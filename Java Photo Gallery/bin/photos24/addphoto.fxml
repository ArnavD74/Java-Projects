<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="photos24.AddPhotoController" prefWidth="600" prefHeight="400" style="-fx-padding: 20;">
    <Button text="Choose Photos" onAction="#handleChoosePhotos" maxWidth="300"/>
    
    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="leftArrowButton" text="&lt;" onAction="#handlePreviousPhoto" />
        <ImageView fx:id="imageView" fitWidth="400" fitHeight="300" preserveRatio="true"/>
        <Button fx:id="rightArrowButton" text="&gt;" onAction="#handleNextPhoto" />
    </HBox>
    
    <Button text="Add Photos" onAction="#handleAddPhotos"/>
</VBox>
